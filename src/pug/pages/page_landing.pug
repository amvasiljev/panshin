extends ../layout/main




block variables
    -var title = 'landing'
    -var description = 'landing'
    -var pageClass = ''

block content
    section.section.section_slider.lazy.section_landing(data-src="/assets/img/banners/banner.png")
            .section__inner.section__inner_slider
                +slider_0('','','','','land')
                +order('order','land')
                .section__arrows
                .section__dots

    section.section.section_tariff.section_blue
        .section__inner
            +title('Комплексное продвижение сайтов','','h1')
            .section__box.section__box_numbers
                +number('1','Собираем','целевые запросы')
                +number('2','Вносим','изменения на сайт')
                +number('3','Улучшаем','видимость в Yandex и Google')
                +number('4','Анализируем','конкурентов')
                +number('5','Делаем','ваш сайт лучше')

            .section__box.section__box_tariffs
                +tariff('tariff_landing','SEO','Над проектом работают SEO-специалист, контент-менеджер, копирайтеры, аналитик, линкбилдеры. Работаем над всеми факторами ранжирования и “давим на все кнопки” для достижения результата.','<span>20 000</span> руб./мес.')
                +tariff('tariff_landing','SEO + Контекст','Над проектом работают SEO-специалист, контент-менеджер, копирайтеры, аналитик, линкбилдеры. Работаем над всеми факторами ранжирования и “давим на все кнопки” для достижения результата.','<span>30 000</span> руб./мес.')
                +tariff('tariff_landing','SEO + Контекст','Над проектом работают SEO-специалист, контент-менеджер, копирайтеры, аналитик, линкбилдеры. Работаем над всеми факторами ранжирования и “давим на все кнопки” для достижения результата.','<span>20 000</span> руб./мес.')

    section.section.section_result
        .section__inner.section__inner_sertificate
            +title('Результат нашей работы','','','h2')
            +slider_result()
            

    section.section.section_deepblue
        .section__inner
            .section__box.section__box_digit
                +digit('в 4 раза','в среднем увеличиваем посещаемость сайтов через SEO','digit_landing')
                +digit('15 компаний в день','обращается к нам с заказом либо за консультацией','digit_landing')
                +digit('в 1.4 раза','в среднем снижаем вложения в контекстную рекламу','digit_landing')
                +digit('100% гарантия','гарантируем конкретную посещаемость либо вывод в TOP-10','digit_landing')
                +digit('+20% дополнительно','кроме продвижения — усилим ваш сайт результат: еще на 20% больше клиентов','digit_landing')
                +digit('от 7 000 руб.','работаем как с заводами, так и с небольшими компаниями','digit_landing')
        
    

    section.section
        .section__inner
            +landing_form('/assets/img/landing/form_sales.svg','Скидка 50%','На первый месяц продвижения','при переходе из другой компании')
            
            


    section.section.section_blue
        .section__inner
            +title('Как мы это делаем?','','','h2')
            .section__box.section__box_services
                +service('landing_1','service__icon_red','solutions/landing','landing','Внесение изменений на сайт','service_white service_big','Оптимизируем сайт под поисковые системы. Исправляем технические ошибки и недоработки. Корректируем и добавляем тексты на сайт.')
                +service('landing_2','service__icon_red','solutions/landing','landing','Внешние отклики, ссылки и отзывы','service_white service_big','Размещаем внешние ссылки на сайт с авторитетных площадок, социальных сетей, сервисов. Размещаем пресс-релизы и рекламные статьи.')
                +service('landing_3','service__icon_red','solutions/landing','landing','Аналитика','service_white service_big','Анализируем поведение пользователей на сайте: пути по сайту, что делает, что читает и смотрят, а что - нет.')
    section.section
        .section__inner
            .section__box.section__box_banner
                +landing_banner()
            
            .section__box.section__box_sertificate
                +title('Клиенты о нас','','','h2')
                +slider_sert()

    
            .section__box.section__box_video
                +video('video_landing','YddDc5-fVw8')
                +video('video_landing','7ruwu-cukHY')
                +video('video_landing','7ruwu-cukHY')
                +video('video_landing','YddDc5-fVw8')
            .slider__options.slider__options_video
                .slider__arrows.slider__arrows_video
                .slider__dots.slider__dots_video

            .section__box
                +landing_form('/assets/img/landing/form_audit.svg','Узнайте возможности вашего сайта','Закажите бесплатный аудит','','landing-request_blue')
              
    section.section.section_cases.section_blue
        .section__inner.section__inner_case
            +title('Кейсы','','h1')

            +slider_case()
            
    
    section.section
        .section__inner
            +title('Наши клиенты в Краснодаре','','h2')
            .section__box.section__box_client
                +client('/assets/img/landing/client_1.png','','','client_landing','type','Клиника УРО ПРО','Частная клиника в Краснодаре')
                +client('/assets/img/landing/client_2.png','','','client_landing','type','Жилой Краснодар','Продажа квартир в новостройках от застройщиков и в сданных домах')
                +client('/assets/img/landing/client_3.png','','','client_landing','type','Магнит новостроек','Продажа квартир в новостройках от застройщиков и в сданных домах')
                +client('/assets/img/landing/client_4.png','','','client_landing','type','МЧС-партнер','Проектирование, монтаж и техническое обслуживание противопожарных систем')
                +client('/assets/img/landing/client_5.png','','','client_landing','type','Жемчужина у моря','ЖК Жемчужина у моря Новомихайловский официальный сайт')
                +client('/assets/img/landing/client_6.png','','','client_landing','type','Санаторий “Архипо-осиповка”','Круглогодичный cанаторий, отдых и лечение на черном море')
                +client('','','','client_hidden')
                +client('','','','client_hidden')
            

            .section__box
                +landing_form('/assets/img/landing/form_sales.svg','Скидка 50%','На первый месяц продвижения','при переходе из другой компании','','other')
    




