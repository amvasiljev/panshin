mixin header()
	header.header
		.header__inner
			a(href="/" data-src="/assets/img/logo.svg").header__logo.lazy
			.header__links
				a(href="/").header__link Результаты
				a(href="/").header__link Отзывы
				a(href="/").header__link Контакты
				a(href="/").header__link Оставить заявку
			.header__contacts
				.header__callback
					.header__cities_wrapper
						.header__cities
							a(href="#phone_1").header__city.header__city_active Москва
							a(href="#phone_2").header__city Краснодар
							a(href="#phone_3").header__city Челябинск
							.header__cities_arrow
								<svg width="12" height="7" viewBox="0 0 12 7" fill="none" xmlns="http://www.w3.org/2000/svg">
